<?xml version="1.0"?>
<config>
    <modules>
        <Hd_Salesman>
            <version>1.0.0</version>
        </Hd_Salesman>
    </modules>
    <admin>
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Hd_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
    </admin>
    <adminhtml>
        <!-- <menu>
            <salesman module="salesman">
                <title>Salesman</title>
                <sort_order>80</sort_order>
                <children>
                    <items module="salesman">
                        <title>Manage Salesman</title>
                        <sort_order>0</sort_order>
                        <action>salesman/adminhtml_salesman</action>
                    </items>
                </children>
            </salesman>
        </menu> -->
        <layout>
            <updates>
                <salesman>
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <helpers>
            <salesman>
                <class>Hd_Salesman_Helper</class>
            </salesman>
        </helpers>
        <blocks>
            <salesman>
                <class>Hd_Salesman_Block</class>
            </salesman>
        </blocks>       
        <models>
            <salesman>
                <class>Hd_Salesman_Model</class>
                <resourceModel>salesman_resource</resourceModel>
            </salesman>
            <salesman_resource>
                <class>Hd_Salesman_Model_Resource</class>
                <entities>
                    <salesman_entity>
                        <table>salesman_entity</table>
                    </salesman_entity>
                    <salesman_entity_datetime>
                        <table>salesman_entity_datetime</table>
                    </salesman_entity_datetime>
                    <salesman_entity_decimal>
                        <table>salesman_entity_decimal</table>
                    </salesman_entity_decimal>
                    <salesman_entity_int>
                        <table>salesman_entity_int</table>
                    </salesman_entity_int>
                    <salesman_entity_text>
                        <table>salesman_entity_text</table>
                    </salesman_entity_text>
                    <salesman_entity_varchar>
                        <table>salesman_entity_varchar</table>
                    </salesman_entity_varchar>
                    <salesman_entity_char>
                        <table>salesman_entity_char</table>
                    </salesman_entity_char> 
                </entities>
            </salesman_resource>
        </models>       
        <resources>
            <salesman_setup>
                <setup>
                    <module>Hd_Salesman</module>
                    <class>Hd_Salesman_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesman_setup>
            <salesman_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesman_write>
            <salesman_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesman_read>
        </resources>    
    </global>
</config>